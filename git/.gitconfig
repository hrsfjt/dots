[user]
	name = $USER_NAME
	email = $EMAIL
[core]
	ignorecase = false
	quotepath = false
	editor = vim -c \"set fenc=utf-8\"
	excludesfile = $HOME/.config/git/ignore
[color]
	diff = auto
	status = auto
	branch = auto
[push]
	default = simple
[diff]
	tool = vimdiff
[difftool]
	prompt = false
[merge]
	tool = vimdiff
[mergetool]
	prompt = false
[pull]
	rebase = false
